---
import Layout from "../../layouts/Layout.astro";
import Main from "../../components/global/Main.astro";
import { ID_NOT_FOUND } from "../../consts";

if (ID_NOT_FOUND) {
  // your condition
  Astro.response.status = 404;
  Astro.response.statusText = "Not found";
}
---

<Layout title="404">
  <Main bgColor="bg-body">
    <div class="flex flex-col items-center justify-center text-center text-white">
      <p class="text-4xl">Этой страницы не существует или она была удалена.</p>
      <br />
      <p>
        Перейти <a href="/" class="text-junost underline-offset-4 hover:underline">в начало →</a>
      </p>
    </div>
  </Main>
</Layout>

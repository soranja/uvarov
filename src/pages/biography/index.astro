---
import Layout from "../../layouts/Layout.astro";
import Main from "../../components/global/Main.astro";
import { ID_NOT_FOUND } from "../../consts";

if (ID_NOT_FOUND) { // your condition
  Astro.response.status = 404;
  Astro.response.statusText = "Not found";
}
---

<Layout title="404">
    <Main bgColor="bg-body">
		<div class="flex flex-col justify-center items-center text-white text-center">
			<p class="text-4xl">Этой страницы не существует или она была удалена.</p>
            <br>
			<p>Перейти <a href="/" class="text-junost hover:underline underline-offset-4">в начало →</a></p>
		</div> 
    </Main>
</Layout>


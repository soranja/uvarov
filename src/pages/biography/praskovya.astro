---
import BioWrapper from "../../components/biography/BioWrapper.astro";
import HeaderWrapper from "../../components/global/header/HeaderWrapper.astro";
import Section from "../../components/global/Section.astro";
import Chapter from "../../components/biography/Chapter.astro";

import { epilogueAssets } from "../../data/data";
---


<BioWrapper>
    <!-- Chapter Intro -->
    <Chapter />

    <!-- Header -->
    <HeaderWrapper />

    <!-- Uvarov Dead -->
    <Section id="uvarov-dead">
        <div class="flex flex-col justify-center items-center text-2xl 2xl:text-4xl leading-normal gap-y-[5vh] text-center">
            <p class="max-w-3xl">
                ПРАСКОВЬЯ
            </p>
            <div id="dead-image" class="flex flex-col justify-center items-center">
                <img src={epilogueAssets.uvarovDead.src} alt={epilogueAssets.uvarovDead.alt} class="max-w-[60%] 2xl:max-w-[80%]"/>
            </div>
        </div>
    </Section>

    
</BioWrapper>

---
interface Props {
    bgColor: string
};

const { bgColor } = Astro.props;
const bgColors : any = {
    body: "bg-body",
    junost: "bg-junost-bg",
    expeditions: "bg-expeditions-bg",
    porechye: "bg-porechye-bg",
    family: "bg-family-bg",
    praskovya: "bg-praskovya-bg",
    activities: "bg-activities-bg",
    museum: "bg-museum-bg",
    epilogue: "bg-epilogue-bg",
    white: "bg-white",
    }
---

<main class={`${bgColors[bgColor]} bg-fixed bg-center bg-cover bg-no-repeat mx-auto`}>
        <slot />
</main>


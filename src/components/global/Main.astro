---
interface Props {
    bgColor: string
};

const { bgColor } = Astro.props;
const bgColors : any = {
    body: "bg-body",
    junost: "bg-junost-bg",
    expeditions: "bg-expeditions-bg",
    family: "bg-family",
    activities: "bg-activities",
    museum: "bg-museum",
    epilogue: "bg-epilogue",
    materials: "bg-materials",
    white: "bg-white",
    }
---

<main class={`${bgColors[bgColor]} bg-fixed bg-center bg-cover mx-auto w-full max-w-full`}>
        <slot />
</main>

